<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentadd.ReimbursementFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.example.graduate_android.component.CustomInput
        android:id="@+id/inputReimBurse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <ListView
        android:id="@+id/listViewReimBurse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputReimBurse"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:divider="#F2F0F0"
        android:dividerHeight="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reimBurseB1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="再记一笔"
            android:textSize="20sp" />

        <Button
            android:id="@+id/reimBurseB2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="完成"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>