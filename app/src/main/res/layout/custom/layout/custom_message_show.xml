<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="194dp"

    android:scaleType="fitXY">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/imageMS"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:scaleType="fitXY"
                android:src="@drawable/background2" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>


    <TextView
        android:id="@+id/todayMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:text="今日收支"
        android:textColor="@color/black"
        android:textSize="21dp" />

    <ImageButton
        android:id="@+id/phtotMS"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/todayMS"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_photo" />

    <TextView
        android:id="@+id/balanceMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/todayMS"
        android:layout_alignLeft="@+id/todayMS"
        android:layout_marginTop="30dp"
        android:text="结余"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/numberMS"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@id/balanceMS"
        android:layout_alignLeft="@+id/todayMS"
        android:text="0.00"
        android:textColor="@color/black"
        android:textSize="40dp" />


    <TextView
        android:id="@+id/incomeMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberMS"
        android:layout_alignLeft="@id/todayMS"

        android:text="总收入0.00"
        android:textColor="@color/black"
        android:textSize="18dp" />


    <View
        android:id="@+id/viewMS"
        android:layout_width="2dp"
        android:layout_height="24dp"
        android:layout_alignTop="@id/incomeMS"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/incomeMS"
        android:background="@color/black" />

    <TextView
        android:id="@+id/outcomeMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberMS"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/viewMS"
        android:text="总支出 0.00"
        android:textColor="@color/black"
        android:textSize="18dp" />


</RelativeLayout>