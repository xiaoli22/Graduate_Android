<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp">

    <ImageView
        android:id="@+id/imageAR"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/typeAR"
        style="@style/CustomTypeStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageAR"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/imageAR"
        android:text="类型" />

    <EditText
        android:id="@+id/dataAR"
        style="@style/CustomDataStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageAR"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/typeAR"
        android:backgroundTint="@android:color/transparent"
        android:hint="..."
        android:paddingBottom="1dp"
        android:textColorHint="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dataAR"
        android:layout_marginTop="15dp"
        android:background="#EEEBEB"></View>


</RelativeLayout>